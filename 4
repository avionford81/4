# Calculate the nth Fibonacci number using recursion
def fibonacci(n):
    if n <= 0:
        return None
    elif n == 1:
        return 0
    elif n == 2:
        return 1
    else:
        return fibonacci(n - 1) + fibonacci(n - 2)

# Prompt the user for the position of the Fibonacci number
position = int(input("Enter the position of the Fibonacci number: "))

# Calculate and display the Fibonacci number at the given position
fib_number = fibonacci(position)
print("Fibonacci number at position", position, "is", fib_number)
